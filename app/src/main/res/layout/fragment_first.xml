<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backhouse4"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/check_money"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/foodbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食品"
        app:layout_constraintEnd_toStartOf="@+id/drinkbutton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Allbutton"
        app:layout_constraintTop_toTopOf="@+id/Allbutton" />

    <Button
        android:id="@+id/drinkbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="飲み物"
        app:layout_constraintEnd_toStartOf="@+id/nitiyouhinbutton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/foodbutton"
        app:layout_constraintTop_toTopOf="@+id/foodbutton" />

    <Button
        android:id="@+id/nitiyouhinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日用品"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/drinkbutton"
        app:layout_constraintTop_toTopOf="@+id/drinkbutton" />

    <Button
        android:id="@+id/Allbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/all"
        app:layout_constraintEnd_toStartOf="@+id/foodbutton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>